@using TatilSeyahatMVC.Models.Siniflar
@using PagedList
@using PagedList.Mvc

@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">BLOG YAZILARI</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tblblog" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>BAŞLIK</th>
                        <th>TARİH</th>
                        <th>SİL</th>
                        <th>GÜNCELLE</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.ID</td>
                            <td><a href="/Blog/BlogDetail/@x.ID"> @x.Header </a> </td>
                            <td>@x.Date.ToString("dd.MM.yyyy")</td>
                            <td> @Html.ActionLink("Sil", "BlogDelete","AdminBlog", new {id= x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Bloğu Silmek İstiyor Musunuz?')" })</td>
                            <td><a href="/AdminBlog/BlogGetir/@x.ID"class="btn btn-primary"> Güncelle</a></td>


                        </tr>
                    }



                </tbody>
            </table>
            <a href="#" class="btn btn-primary"> Yeni Blog</a>
        </div>
    </div>
</div>
