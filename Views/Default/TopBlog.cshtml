@using TatilSeyahatMVC.Models.Siniflar
@model List<Blog>

<div class="box1">
    <div class="padding">
        <h4>Son 10 Blog Yazılarım</h4>
        @{int i = 0; }
            @foreach (var tp in Model)
                    {
                        i++;
            <ul class="list list-pad">
                <li class="list-bg"><span>@i.</span><a href="/Blog/BlogDetail/@tp.ID">@tp.Header</a></li>
            </ul>
        }

        <a href="/Blog/Index" class="link1">Tüm yazıları görüntüle...</a>
    </div>
    @*burası sağ alt alan*@
@Html.Action("OurBest","Default")
    <div class="clear"></div>
</div>
