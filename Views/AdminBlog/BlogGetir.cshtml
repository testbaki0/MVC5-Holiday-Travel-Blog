@model TatilSeyahatMVC.Models.Siniflar.Blog

@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="height:650px;width:350px; margin-left:auto;margin-right:auto;">
    <h2>Blog Düzenleme</h2>
    <br />


    @using (Html.BeginForm("BlogGuncelle", "AdminBlog", FormMethod.Post))
    {
        <div class="form-group">
            <label for="exampleFormControlInput1">ID</label>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Başlık</label>
            @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">Resim</label>
            @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Tarih</label>
            @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">İçerik</label>
            @Html.TextAreaFor(x => x.Explanation, 6, 1, new { @class = "form-control", @style = "width:550px;height:140px;" })
        </div>
        <div><button class="btn btn-primary">Güncelle</button></div>
    }
</div>
